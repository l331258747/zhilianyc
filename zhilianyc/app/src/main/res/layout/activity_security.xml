<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_15" />

    <View
        android:id="@+id/view_modify"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改登录密码"
        app:layout_constraintBottom_toBottomOf="@+id/view_modify"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_modify" />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintBottom_toBottomOf="@+id/view_modify"
        app:layout_constraintEnd_toEndOf="@+id/gl_end_15"
        app:layout_constraintTop_toTopOf="@+id/view_modify" />

    <View
        android:id="@+id/view_capital"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_modify"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置资金密码"
        app:layout_constraintBottom_toBottomOf="@+id/view_capital"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_capital" />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintBottom_toBottomOf="@+id/view_capital"
        app:layout_constraintEnd_toEndOf="@+id/gl_end_15"
        app:layout_constraintTop_toTopOf="@+id/view_capital" />

    <View
        android:id="@+id/view_authentication"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_capital"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"
        app:layout_constraintBottom_toBottomOf="@+id/view_authentication"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_authentication" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="已认证"
        android:textColor="@color/color_61B53F"
        app:layout_constraintEnd_toStartOf="@+id/iv_status"
        app:layout_constraintBottom_toBottomOf="@+id/view_authentication"
        app:layout_constraintTop_toTopOf="@+id/view_authentication" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintBottom_toBottomOf="@+id/view_authentication"
        app:layout_constraintEnd_toEndOf="@+id/gl_end_15"
        app:layout_constraintTop_toTopOf="@+id/view_authentication" />

    <View
        android:id="@+id/view_address"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_authentication"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货地址"
        app:layout_constraintBottom_toBottomOf="@+id/view_address"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_address" />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintBottom_toBottomOf="@+id/view_address"
        app:layout_constraintEnd_toEndOf="@+id/gl_end_15"
        app:layout_constraintTop_toTopOf="@+id/view_address" />


    <View
        android:id="@+id/view_collection"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收款账号设置"
        app:layout_constraintBottom_toBottomOf="@+id/view_collection"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_collection" />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintBottom_toBottomOf="@+id/view_collection"
        app:layout_constraintEnd_toEndOf="@+id/gl_end_15"
        app:layout_constraintTop_toTopOf="@+id/view_collection" />

</androidx.constraintlayout.widget.ConstraintLayout>