<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:hint="输入资金密码"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_pwd2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:hint="再次输入资金密码"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd" />


    <EditText
        android:id="@+id/et_verify"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:hint="请输入验证码"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd2" />

    <TextView
        android:id="@+id/tv_verify_code"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/btn_368feb_r40"
        app:layout_constraintTop_toTopOf="@+id/et_verify"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/et_verify"
        app:layout_constraintEnd_toEndOf="@+id/et_verify"
        android:text="发送验证码"/>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bg_gradients_btn"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_verify" />

</androidx.constraintlayout.widget.ConstraintLayout>