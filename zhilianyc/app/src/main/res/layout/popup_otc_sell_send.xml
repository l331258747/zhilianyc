<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@drawable/btn_f7_r20_top"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/sp_20"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/sp_15">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布转让单"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="转让费：11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_price"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_99"
        />

    <View
        android:id="@+id/view_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/btn_00_r10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="单价（¥）"
        app:layout_constraintBottom_toBottomOf="@id/view_price"
        app:layout_constraintStart_toStartOf="@id/view_price"
        app:layout_constraintTop_toTopOf="@id/view_price" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@null"
        android:hint="请输入转让单价"
        android:inputType="numberDecimal"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/view_price"
        app:layout_constraintEnd_toEndOf="@id/view_price"
        app:layout_constraintStart_toStartOf="@id/view_price"
        app:layout_constraintTop_toTopOf="@id/view_price" />


    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/view_price"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/et_price">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注:"
            android:textColor="@color/color_FF4751"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="散单单价：0.18-10.1元，整单单价：0.2-10.1元"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:id="@+id/view_num"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_00_r10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_price" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="数量"
        app:layout_constraintBottom_toBottomOf="@id/view_num"
        app:layout_constraintStart_toStartOf="@id/view_num"
        app:layout_constraintTop_toTopOf="@id/view_num" />

    <EditText
        android:id="@+id/et_num"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@null"
        android:hint="请输入转让数量，最低1个"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="9"
        app:layout_constraintBottom_toBottomOf="@id/view_num"
        app:layout_constraintEnd_toEndOf="@id/view_num"
        app:layout_constraintStart_toStartOf="@id/view_num"
        app:layout_constraintTop_toTopOf="@id/view_num" />


    <LinearLayout
        android:id="@+id/ll_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/view_num"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/et_num">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注:"
            android:textColor="@color/color_FF4751"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="散单：小于50个，整单：大于等于50个"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <View
        android:id="@+id/view_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_00_r10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_num" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="交易密码"
        app:layout_constraintBottom_toBottomOf="@id/view_password"
        app:layout_constraintStart_toStartOf="@id/view_password"
        app:layout_constraintTop_toTopOf="@id/view_password" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@null"
        android:hint="请输入交易密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/view_password"
        app:layout_constraintEnd_toEndOf="@id/view_password"
        app:layout_constraintStart_toStartOf="@id/view_password"
        app:layout_constraintTop_toTopOf="@id/view_password" />


    <View
        android:id="@+id/view_verify"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_00_r10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_password" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="验证码"
        app:layout_constraintBottom_toBottomOf="@id/view_verify"
        app:layout_constraintStart_toStartOf="@id/view_verify"
        app:layout_constraintTop_toTopOf="@id/view_verify" />


    <EditText
        android:id="@+id/et_verify"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@null"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/view_verify"
        app:layout_constraintEnd_toEndOf="@id/view_verify"
        app:layout_constraintStart_toStartOf="@id/view_verify"
        app:layout_constraintTop_toTopOf="@id/view_verify" />

    <TextView
        android:id="@+id/tv_verify_code"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/btn_368feb_r40"
        app:layout_constraintTop_toTopOf="@+id/et_verify"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/et_verify"
        app:layout_constraintEnd_toEndOf="@+id/et_verify"
        android:text="发送验证码"/>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/bg_gradients_btn_1c81e9"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_verify" />

    <TextView
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_submit"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/color_cc"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="如订单成立两小时内未付款，则金豆退还且作封禁买家账号处理"/>

</androidx.constraintlayout.widget.ConstraintLayout>







