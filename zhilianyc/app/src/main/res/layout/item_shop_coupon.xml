<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_140"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_140" />


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/ic_coupon_xian"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="区县仓储"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        android:layout_marginStart="@dimen/dp_10"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_max_hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintTop_toTopOf="@+id/iv_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_12"
        android:text="1/8"/>

    <TextView
        android:id="@+id/tv_task_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_99"
        app:layout_constraintTop_toBottomOf="@+id/iv_img"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:text="产出值"/>

    <TextView
        android:id="@+id/tv_dailyRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_task_all"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/tv_task_all"
        android:layout_marginStart="@dimen/dp_10"
        tools:text="3.0金豆/天"/>


    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_99"
        app:layout_constraintBottom_toBottomOf="@+id/tv_task_all"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_end_140"
        android:text="天数"/>

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_3"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/tv_3"
        android:layout_marginStart="@dimen/dp_10"
        tools:text="40天"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_99"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_all"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:text="劳动力"/>

    <TextView
        android:id="@+id/tv_labor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_2"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/tv_2"
        android:layout_marginStart="@dimen/dp_10"
        tools:text="+10.0"/>


    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_99"
        app:layout_constraintBottom_toBottomOf="@+id/tv_2"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_end_140"
        android:text="价格"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_4"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/tv_4"
        android:layout_marginStart="@dimen/dp_10"
        tools:text="10.0金豆"/>

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_99"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:text="总产量"/>

    <TextView
        android:id="@+id/tv_totalBeans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_5"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toEndOf="@id/tv_5"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/color_368feb"
        android:includeFontPadding="false"
        android:textStyle="bold"
        tools:text="12.0"/>

    <TextView
        android:id="@+id/tv_totalBeans2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_5"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/tv_totalBeans"
        android:textColor="@color/color_368feb"
        android:layout_marginStart="@dimen/dp_5"
        android:text="金豆"/>

    <TextView
        android:id="@+id/btn_exchange"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@+id/tv_5"
        app:layout_constraintBottom_toBottomOf="@id/tv_5"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        android:gravity="center"
        android:background="@drawable/btn_368feb_r40"
        android:textColor="@color/white"
        android:text="兑换"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/btn_exchange"/>

</androidx.constraintlayout.widget.ConstraintLayout>